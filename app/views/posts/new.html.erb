<%= simple_form_for @post do |f| %>
<% if @post.errors.any? %>
  <h2>Errors:</h2>
    <p>Please correct the following <%= pluralize(@post.errors.count, "error") %>:</p>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul> 
<% end %>
<%= f.input :title %><br/>
<%= f.input :link %><br/>

<%= f.button :submit %>
<% end %>