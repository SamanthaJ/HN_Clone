<div class="page-content">
  <div class="post-link">
    <%= link_to @post.title, "http://#{@post.link}" %></div>
    <div class="posted-by">
      Submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.email %>
    </div> <br/>
    <%= pluralize @post.comments.count, "Comment" %><br/>
    <% @comments.each do |comment| %>
    <ul class="list-group">
      <li class="list-group-item">
        <%= comment.body %><br/><br/>
        <div class="posted-by">Posted: <%= time_ago_in_words(comment.created_at) %> ago by: <%= comment.user.email %>
        </div>
      </li>
    </ul>
    <% end %>
    <%= link_to "Submit a comment", '#', class: "links create-link" %>
    <div class="hidden-form-container"><%= render 'comments/form' %></div>
    <h5><%= link_to "back", posts_path %></h5>
  </div>


  